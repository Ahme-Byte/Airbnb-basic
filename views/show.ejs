<%layout('layouts/template.ejs')%>
<div class="card show-card">
  <img src="<%=items.image.url%>" class="card-img-top" alt="listing-img">
  <div class="card-body">
    <h5 class="card-title"><%=items.title%></h5>
    <p class="card-text">    <ul>
        <li><%=items.description%></li>
         <li><%=items.location%></li>
          <li><%=items.country%></li>
           <li>&#8360; <%=items.price.toLocaleString('en-IN')%></li>
    </ul>  </p>
  </div>
</div>
<div class="show-btn">
   <button type='submit' class="show-edit"><a href="/listing/edit/<%=items._id%>">Edit</a></button>
    <br>
    <form method="post" action="/listing/<%=items._id%>?_method=DELETE">
        <button class="show-del">Delete</button>
    </form>
    </div>
    <br>
    <hr>
    <form method="get" action="/listing/<%=items._id%>/ratings" class="show-form">
      <button class="edit-btn-review">Give Rating</button>
  </form>
<br>
<hr>
<div class="review-box">
  <%for(let review of items.ratings){%>
        <div class="card" style="width: 10rem;">
               <h4><b>Jolly mk</b></h4>
               <p><%=review.comment%></p>
               <p>Star : <%=review.range%></p>
               <form method="post" action="/listing/<%=items._id%>/review/<%=review._id%>?_method=DELETE">
                <button class="btn btn-outline-danger">Delete</button>
               </form>
        </div>   
 <%}%>
</div>