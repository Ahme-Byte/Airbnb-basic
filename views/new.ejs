<%layout('layouts/template.ejs')%>
    <h2 class='listing-heading'>New Listing</h2>
    <div class="form-wrapper">
    <form method="post" action="/listing"> 
        <div class="mb-3">  
        <label for="title" class='form-label'>Title : </label>
        <input type="text" name="docu[title]" id="title" placeholder="Enter Title"  class='form-control'>
        </div>
        <div class="mb-3" >
        <label for="des" class='form-label'>Description : </label>
        <textarea id="des" name="docu[description]" placeholder="Write Description"  class='form-control'></textarea>
       </div>
       <div class="mb-3">
        <label for='img' class='form-label'>Image : </label>
        <input type="text" id="img" name="docu[image]" placeholder="Enter image link/url"  class='form-control'>
        </div>
        <div class="mb-3">
        <label for='location' class='form-label'>Location : </label>
        <input type="text" id="location" name="docu[location]" placeholder="Enter Location"  class='form-control'>
       </div>
        <div class="d-md-flex justify-content-evenly">
       <div class="mb-3">
        <label for="cntry" class='form-label'>Country : </label>
        <input type="text" id="cntry" name="docu[country]" placeholder="Enter Country"  class='form-control'>
       </div>
       <div class="mb-3">
        <label for="price" class='form-label'>Price : </label>
        <input type="number" id="price" name="docu[price]" placeholder="0"  class='form-control'>
      </div>
      </div>
        <button class="new-submit" type="submit">Post</button>
    </form>
</div>